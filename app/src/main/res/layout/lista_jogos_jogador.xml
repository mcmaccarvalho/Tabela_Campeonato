<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvatual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:cardCornerRadius="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/fundo_verde_escuro"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clexibir_jogos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/grama">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgjog1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/jogador"
                android:src="@drawable/trofeu_bco"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtjog1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:gravity="center"
                android:text="@string/a_definir"
                android:textAlignment="gravity"
                android:textColor="@color/branco"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/placar1"
                app:layout_constraintStart_toEndOf="@+id/imgjog1"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="@color/fundo_verde_escuro" />


            <TextView
                android:id="@+id/txtx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/x"
                android:textColor="@color/branco"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtjog2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:gravity="center"
                android:text="@string/a_definir"
                android:textAlignment="gravity"
                android:textColor="@color/branco"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imgjog2"
                app:layout_constraintStart_toEndOf="@+id/placar2"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgjog2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:contentDescription="@string/jogador"
                android:src="@drawable/trofeu_bco"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/placar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:ems="1"
                android:gravity="center_horizontal"
                android:text="@string/_0"
                android:textColor="@color/branco"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/txtx1"
                app:layout_constraintEnd_toStartOf="@+id/txtx1"
                app:layout_constraintTop_toTopOf="@+id/txtx1" />

            <TextView
                android:id="@+id/placar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ems="1"
                android:gravity="center_horizontal"
                android:text="@string/_0"
                android:textColor="@color/branco"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/txtx1"
                app:layout_constraintStart_toEndOf="@+id/txtx1"
                app:layout_constraintTop_toTopOf="@+id/txtx1" />


            <TextView
                android:id="@+id/txtp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="@color/branco"
                app:layout_constraintEnd_toStartOf="@+id/txtx1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="@color/branco"
                app:layout_constraintStart_toEndOf="@+id/txtx1"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>