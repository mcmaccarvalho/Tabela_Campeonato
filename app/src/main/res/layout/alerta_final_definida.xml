<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clmainresult"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:forceHasOverlappingRendering="false">


    <com.google.android.material.card.MaterialCardView


        android:id="@+id/cvplacar"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/fundo_verde_escuro"
        app:strokeWidth="1dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clresultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txttitle">


                <LinearLayout
                    android:id="@+id/llimg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgjog1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:elevation="8dp"
                        android:src="@drawable/trofeupretopq" />

                    <TextView
                        android:id="@+id/txttx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="@string/x"
                        android:textColor="@color/fundo_verde_escuro"
                        android:textSize="18sp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgjog2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:elevation="8dp"
                        android:src="@drawable/trofeupretopq" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llnome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtjog1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autoSizeStepGranularity="10dp"
                        android:autoSizeTextType="none"
                        android:autoText="false"
                        android:elevation="8dp"
                        android:ellipsize="end"
                        android:freezesText="false"
                        android:gravity="center|fill_vertical"
                        android:maxLines="1"
                        android:text="@string/a_definir"
                        android:textAlignment="gravity"
                        android:textColor="@color/fundo_verde_escuro"
                        android:textSize="14sp"
                        app:rippleColor="@color/fundo_verde_escuro" />


                    <TextView
                        android:id="@+id/txtjog2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autoSizeStepGranularity="10dp"
                        android:autoSizeTextType="none"
                        android:autoText="false"
                        android:elevation="8dp"
                        android:ellipsize="end"
                        android:freezesText="false"
                        android:gravity="center|fill_vertical"
                        android:maxLines="1"
                        android:text="@string/a_definir"
                        android:textAlignment="gravity"
                        android:textColor="@color/fundo_verde_escuro"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txttitle"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="2dp"
                android:gravity="center_horizontal"
                android:text="Final Definida"
                android:textColor="@color/fundo_verde_escuro"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/lltitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/txttitle"
                app:layout_constraintStart_toStartOf="@+id/txttitle"
                app:layout_constraintTop_toBottomOf="@+id/txttitle"/>

            <LinearLayout
                android:id="@+id/llsalvar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="48dp"
                android:orientation="vertical"
                android:padding="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView37">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <Button
                        android:id="@+id/bttdsjogos"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:text="Jogar Todos\nos Jogos"
                        android:textColor="@color/fundo_verde_escuro"
                        android:textSize="10sp"
                        app:rippleColor="@color/fundo_verde_escuro"
                        app:strokeColor="@color/fundo_verde_escuro" />

                    <Button
                        android:id="@+id/btencerrar"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="Ir direto para\nFinal"
                        android:textColor="@color/fundo_verde_escuro"
                        android:textSize="10sp"
                        app:rippleColor="@color/fundo_verde_escuro"
                        app:strokeColor="@color/fundo_verde_escuro" />


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/selecione_op_o"
                android:textColor="@color/fundo_verde_escuro"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:gravity="center"
                android:text="Se não optar por Todos os Jogos, as partidas ainda não realizadas serão encerradas em 0x0\n\n(Não é possível reverter)"
                android:textColor="@color/fundo_verde_escuro"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView36" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>