<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clmainresult"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:forceHasOverlappingRendering="false"
    android:minHeight="200dp">


    <com.google.android.material.card.MaterialCardView


        android:id="@+id/cvplacar"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/fundo_verde_escuro"
        app:strokeWidth="1dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clresultado"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/txtjog1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeStepGranularity="10dp"
                android:autoSizeTextType="none"
                android:autoText="false"
                android:elevation="8dp"
                android:ellipsize="end"
                android:ems="5"
                android:freezesText="false"
                android:gravity="center|fill_vertical"
                android:maxLines="1"
                android:text="MARCO CARVALHO"
                android:textAlignment="gravity"
                android:textColor="@color/fundo_verde_escuro"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/imgjog1"
                app:layout_constraintStart_toStartOf="@+id/imgjog1"
                app:layout_constraintTop_toBottomOf="@+id/imgjog1"
                app:rippleColor="@color/fundo_verde_escuro" />

            <TextView
                android:id="@+id/txtx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="8dp"
                android:gravity="center"
                android:text="X"
                android:textColor="@color/fundo_verde_escuro"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtjog1" />

            <TextView
                android:id="@+id/txtjog2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:ems="5"
                android:freezesText="true"
                android:gravity="center"
                android:maxLines="1"
                android:text="A definir"
                android:textAlignment="gravity"
                android:textColor="@color/fundo_verde_escuro"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/imgjog2"
                app:layout_constraintStart_toStartOf="@+id/imgjog2"
                app:layout_constraintTop_toBottomOf="@+id/imgjog2" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgjog2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:elevation="8dp"
                android:src="@drawable/avatar_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtx1"
                app:layout_constraintTop_toBottomOf="@+id/txttitlejogo"
                app:srcCompat="@drawable/trofeupretopq" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgjog1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:elevation="8dp"
                android:src="@drawable/trofeupretopq"
                app:layout_constraintEnd_toStartOf="@+id/txtx1"
                app:layout_constraintHorizontal_bias="0.531"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txttitlejogo" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="2dp"
                android:gravity="center_horizontal"
                android:text="Informe resultado do jogo"
                android:textColor="@color/fundo_verde_escuro"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/txttitlejogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Jogo "
                android:textColor="@color/fundo_verde_escuro"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/textView7"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/txtnumjogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="0"
                android:textColor="@color/fundo_verde_escuro"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/txttitlejogo"
                app:layout_constraintStart_toEndOf="@+id/txttitlejogo"
                app:layout_constraintTop_toTopOf="@+id/txttitlejogo" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:padding="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llmenos2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <Button
                        android:id="@+id/btcancelar"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:text="@string/cancelar"
                        android:textColor="@color/fundo_verde_escuro"
                        android:textSize="10sp"
                        app:rippleColor="@color/fundo_verde_escuro"
                        app:strokeColor="@color/fundo_verde_escuro" />

                    <Button
                        android:id="@+id/btsalvar"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="@string/salvar"
                        android:textColor="@color/fundo_verde_escuro"
                        android:textSize="10sp"
                        app:rippleColor="@color/fundo_verde_escuro"
                        app:strokeColor="@color/fundo_verde_escuro" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <Button
                        android:id="@+id/btreset"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reset Jogo"
                        android:textColor="@color/fundo_verde_escuro"
                        android:textSize="10sp"
                        app:rippleColor="@color/fundo_verde_escuro"
                        app:strokeColor="@color/fundo_verde_escuro" />


                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/placar2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:elevation="8dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/fundo_verde_escuro"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/txtx1"
                app:layout_constraintEnd_toEndOf="@+id/imgjog2"
                app:layout_constraintStart_toStartOf="@+id/imgjog2"
                app:layout_constraintTop_toTopOf="@+id/txtx1" />

            <TextView
                android:id="@+id/placar1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:elevation="8dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/fundo_verde_escuro"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/txtx1"
                app:layout_constraintEnd_toEndOf="@+id/imgjog1"
                app:layout_constraintStart_toStartOf="@+id/imgjog1"
                app:layout_constraintTop_toTopOf="@+id/txtx1" />

            <LinearLayout
                android:id="@+id/llmais1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:padding="6dp"
                app:layout_constraintEnd_toEndOf="@+id/placar1"
                app:layout_constraintStart_toStartOf="@+id/placar1"
                app:layout_constraintTop_toBottomOf="@+id/placar1">

                <TextView
                    android:id="@+id/maisjog1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/texto_redondo"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/fundo_verde_escuro"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/imgjog1"
                    app:layout_constraintTop_toBottomOf="@+id/placar1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llmenos1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:padding="6dp"
                app:layout_constraintEnd_toEndOf="@+id/llmais1"
                app:layout_constraintStart_toStartOf="@+id/llmais1"
                app:layout_constraintTop_toBottomOf="@+id/llmais1">

                <TextView
                    android:id="@+id/menosjog1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/texto_redondo"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/fundo_verde_escuro"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llmais2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:padding="6dp"
                app:layout_constraintEnd_toEndOf="@+id/placar2"
                app:layout_constraintStart_toStartOf="@+id/placar2"
                app:layout_constraintTop_toBottomOf="@+id/placar2">

                <TextView
                    android:id="@+id/maisjog2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/texto_redondo"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/fundo_verde_escuro"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/imgjog2"
                    app:layout_constraintTop_toBottomOf="@+id/placar2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llmenos2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:padding="6dp"
                app:layout_constraintEnd_toEndOf="@+id/llmais2"
                app:layout_constraintStart_toStartOf="@+id/llmais2"
                app:layout_constraintTop_toBottomOf="@+id/llmais2">

                <TextView
                    android:id="@+id/menosjog2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/texto_redondo"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/fundo_verde_escuro"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/imgjog2"
                    app:layout_constraintTop_toBottomOf="@+id/placar2" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>