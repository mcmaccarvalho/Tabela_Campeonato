        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="@color/branco"
        app:cardCornerRadius="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19"
        app:strokeColor="@color/fundo_verde_escuro"
        app:strokeWidth="1dp">


        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvlistajogo">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:contentDescription="@string/trof_u"
                android:src="@drawable/trofeudourado" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/pt"
                android:textColor="@color/fundo_verde_escuro"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sg"
                android:textColor="@color/fundo_verde_escuro"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/gp"
                android:textColor="@color/fundo_verde_escuro"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/gols_contra"
                android:textColor="@color/fundo_verde_escuro"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/textView25"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/j"
                android:textColor="@color/fundo_verde_escuro"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/v"
                android:textColor="@color/fundo_verde_escuro"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/d"
                android:textColor="@color/fundo_verde_escuro"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="20dp"
