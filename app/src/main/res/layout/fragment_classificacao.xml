        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:cardBackgroundColor="#3F51B5"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/fundo_verde_escuro"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cljogoativo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">


            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txttitlejogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pr_ximo_jogo"
                    android:textColor="@color/branco"
                    android:textSize="18sp" />


            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvatual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout8"
                app:strokeColor="@color/fundo_verde_escuro"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clexibir_jogos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/grama">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgjog1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:contentDescription="@string/jogador"
                        android:src="@drawable/trofeu_bco"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtjog1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:ems="6"
                        android:gravity="center"
                        android:text="@string/a_definir"
                        android:textAlignment="gravity"
                        android:textColor="@color/branco"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/placar1"
                        app:layout_constraintStart_toEndOf="@+id/imgjog1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:rippleColor="@color/fundo_verde_escuro" />


                    <TextView
                        android:id="@+id/txtx1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/x"
                        android:textColor="@color/branco"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtjog2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:ems="6"
                        android:gravity="center"
                        android:text="@string/a_definir"
                        android:textAlignment="gravity"
                        android:textColor="@color/branco"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imgjog2"
                        app:layout_constraintStart_toEndOf="@+id/placar2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgjog2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="@string/jogador"
                        android:src="@drawable/trofeu_bco"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/placar1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:ems="1"
                        android:gravity="center_horizontal"
                        android:text="@string/_0"
                        android:textColor="@color/branco"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/txtx1"
                        app:layout_constraintEnd_toStartOf="@+id/txtx1"
                        app:layout_constraintTop_toTopOf="@+id/txtx1" />

                    <TextView
                        android:id="@+id/placar2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:ems="1"
                        android:gravity="center_horizontal"
                        android:text="@string/_0"
                        android:textColor="@color/branco"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/txtx1"
                        app:layout_constraintStart_toEndOf="@+id/txtx1"
                        app:layout_constraintTop_toTopOf="@+id/txtx1" />

                    <TextView
                        android:id="@+id/txtp1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="@color/branco"
                        app:layout_constraintEnd_toStartOf="@+id/txtx1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtp2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="@color/branco"
                        app:layout_constraintStart_toEndOf="@+id/txtx1"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/txtnumjogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="0/0"
                android:textColor="@color/branco"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout8"
                app:layout_constraintEnd_toEndOf="@+id/cvatual"
                app:layout_constraintTop_toTopOf="@+id/linearLayout8" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Total:"
                android:textColor="@color/branco"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/txtnumjogo"
                app:layout_constraintEnd_toStartOf="@+id/txtnumjogo"
                app:layout_constraintTop_toTopOf="@+id/txtnumjogo" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

